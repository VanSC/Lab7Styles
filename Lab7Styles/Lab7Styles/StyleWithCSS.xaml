<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab7Styles.StyleWithCSS">
    
    <ContentPage.Resources>
        <StyleSheet Source="estilo.css" />
    </ContentPage.Resources>

    <StackLayout>
        
        <!-- Botón con estilo CSS aplicado -->
        
        <Button Text="Mi Botón Estilizado" StyleClass="my-button" />
        <Label Text="Hola, este es un stilo usando CSS" StyleClass="myLabel"></Label>
        <Label Text="By: Vane :D" StyleClass="myName"></Label>
    </StackLayout>
    
</ContentPage>